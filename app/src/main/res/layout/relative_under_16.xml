<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="employee"
            type="com.example.recycledviewexercise.Employee" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"

        app:cardElevation="16dp"
        app:cardMaxElevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:background="@drawable/shadow"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_under_16_height"
            android:layout_marginBottom="@dimen/relative_under_16_margin_bottom"
            android:background="@color/primaryDarkColor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="@{`Employee id: ` + employee.id}"
                android:textSize="@dimen/relative_under_16_text_size" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_marginStart="@dimen/relative_under_16_textView_margin_left"
                android:layout_marginLeft="@dimen/relative_under_16_textView_margin_start"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:text="@{`Employee name: ` + employee.name}"
                android:textSize="@dimen/relative_under_16_text_size" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@{`Employee age: ` + employee.salary}"
                android:textSize="@dimen/relative_under_16_text_size"
                tools:ignore="RelativeOverlap" />

            <com.github.ivbaranov.mfb.MaterialFavoriteButton
                android:id="@+id/favourite_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_favorite_border_white_24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>