<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="employee"
            type="com.example.recycledviewexercise.Employee" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_under_16_height"
        android:layout_marginBottom="@dimen/relative_under_16_margin_bottom"
        android:background="@color/primaryDarkColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@{`Employee id: ` + employee.id}"
            android:textSize="@dimen/relative_under_16_text_size" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_marginStart="@dimen/relative_under_16_textView_margin_left"
            android:layout_marginLeft="@dimen/relative_under_16_textView_margin_start"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="@{`Employee name: ` + employee.name}"
            android:textSize="@dimen/relative_under_16_text_size" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@{`Employee age: ` + employee.salary}"
            android:textSize="@dimen/relative_under_16_text_size" />

    </RelativeLayout>
</layout>