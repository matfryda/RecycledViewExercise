<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="employee"
            type="com.example.recycledviewexercise.Employee" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_employees_layout_height"
        android:layout_marginBottom="@dimen/relative_employees_layout_margin_bottom"
        android:background="@color/primaryDarkColor">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@{String.valueOf(employee.id)}"
            android:textSize="@dimen/relative_employees_layout_text_size" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@{employee.name}"
            android:textSize="@dimen/relative_employees_layout_text_size"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</layout>